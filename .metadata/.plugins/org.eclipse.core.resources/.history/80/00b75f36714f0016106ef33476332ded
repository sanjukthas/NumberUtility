

import java.io.IOException;
import java.util.HashMap;
import java.util.List;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import model.DBPerson;

import model.Person;

import model.Student;

/**
 * Servlet implementation class HomeServlet
 */
@WebServlet("/HomeServlet")
public class HomeServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     */
    public HomeServlet() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		doGet(request, response);
	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		HttpSession session = request.getSession();
		
		String studentnid = (String)request.getParameter("studentnid");	
		
		if(studentnid!=null)
		{
			
			
			Student student = (Student) request.getSession().getAttribute("student");
								
			
			session.setAttribute("student", student.getPerson().getFirstname());
			session.setAttribute("studentnid", student.getStudentnid());
			session.setAttribute("major",student.getMajor());
			session.setAttribute("yearofentry", student.getYearofentry());
			
			//session.setAttribute("images", "https://www.gravatar.com/avatar/"+Util.MD5Util.md5Hex(user.getUseremail())+"?s=80");
			
			
			
			
			//request.getRequestDispatcher(".jsp").forward(request, response);
					
		}
		
			
		
		
	}

}
