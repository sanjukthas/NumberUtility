package Invoice;

public class LineItem {
	private String item, description;
	private double price;
	private boolean untaxable;
	
	public LineItem(String item, String description, double price, boolean untaxable) {
		this.item = item;
		this.description = description;
		this.price = price;
		this.setUntaxable(untaxable);
	}
	
	//setters getters
	public String getItem() {
		return item;
	}
	public void setItem(String item) {
		this.item = item;
	}
	public String getDescription() {
		return description;
	}
	public void setDescription(String description) {
		this.description = description;
	}
	public double getPrice() {
		return price;
	}
	public void setPrice(double price) {
		this.price = price;
	}

	public boolean isUntaxable() {
		return untaxable;
	}

	public void setUntaxable(boolean untaxable) {
		this.untaxable = untaxable;
	}

}