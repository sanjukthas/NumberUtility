import java.util.Scanner;
public class BookApplication {
	
	 public static void main(String[] args) {
		   
	      System.out.println("Enter the book details:");
	      System.out.println(" The author of the book is ");
	      String n = new Scanner(System.in).next();
	      author(n);
	      System.out.println(" The title of the book is ");
	      String x = new Scanner(System.in).next();
	      title(x);
	      System.out.println(" The description of the book is ");
	      String y = new Scanner(System.in).next();
	      description(y);
	    }
	 
	   public static void author(String n) {
	      System.out.println(" The author of the book is " +n);
	   }
	   public static void title(String x) {
	      System.out.println(" The title of the book is " +x);
	   }
	   public static void description(String y) {
	      System.out.println(" The description of the book is " +y);
	   }
	}
 